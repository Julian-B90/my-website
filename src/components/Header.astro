---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">Home</a></h2>
    <input
      type="checkbox"
      id="burger-toggle"
      class="burger-toggle"
      aria-label="Menü öffnen"
    />
    <label for="burger-toggle" class="burger" aria-hidden="true">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </label>
    <div class="internal-links">
      <a href="/blog/jest">Jest</a>
      <a href="/blog/vitest">Vitest</a>
      <a href="/blog/cypress">Cypress</a>
      <a href="/blog/playwright">Playwright</a>
      <a href="/blog/testcafe">TestCafe</a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0.5em 0;
    position: relative;
  }
  .internal-links {
    display: flex;
    gap: 1.2em;
  }
  nav a,
  .internal-links a {
    padding: 0.2em 0.5em;
    color: #1a202c;
    font-weight: 600;
    border-radius: 2em;
    transition:
      background 0.2s,
      color 0.2s;
    text-decoration: none;
    font-size: 1.1em;
  }
  nav a:hover,
  .internal-links a:hover {
    background: linear-gradient(90deg, #6366f1 0%, #0ea5e9 100%);
    color: #fff;
  }
  .burger-toggle {
    display: none;
  }
  .burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 200;
  }
  .bar {
    display: block;
    width: 28px;
    height: 3px;
    background: #1a202c;
    border-radius: 2px;
    transition: all 0.3s;
  }
  @media (max-width: 900px) {
    nav {
      flex-direction: column;
      align-items: flex-start;
    }
    .internal-links {
      gap: 0.7em;
      flex-wrap: wrap;
    }
  }
  @media (max-width: 600px) {
    main {
      width: auto;
    }
    header {
      padding: 0;
    }
    nav {
      padding: 0.5em 0.2em;
      display: flex;
      flex-direction: row;
      align-items: center;
    }
    .burger {
      display: flex;
    }
    .internal-links {
      display: none;
      position: absolute;
      top: 60px;
      left: 0;
      width: 100vw;
      background: #fff;
      box-shadow: 0 2px 8px rgba(var(--black), 10%);
      flex-direction: column;
      gap: 0.2em;
      z-index: 150;
    }
    .internal-links a {
      width: 100%;
      text-align: left;
      padding: 0.9em 1em;
      font-size: 1em;
    }
    .burger-toggle:checked ~ .burger + .internal-links {
      display: flex;
    }
  }
  @media (min-width: 601px) {
    .burger {
      display: none;
    }
  }
</style>
